@page "/traineeDetails/{TraineeId:int}"


<div class="container">
    <h1 class="text-center mb-4">Trainee Details</h1>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Id:</label>
                <div class="col-sm-8">
                    <label class="form-control">@trainee?.Id</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Name:</label>
                <div class="col-sm-8">
                    <label class="form-control">@trainee?.Name</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Gender:</label>
                <div class="col-sm-8">
                    <label class="form-control">@trainee?.Gender</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Email:</label>
                <div class="col-sm-8">
                    <label class="form-control">@trainee?.Email</label>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Mobile No:</label>
                <div class="col-sm-8">
                    <label class="form-control">@trainee?.MobileNo</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Birth Date:</label>
                <div class="col-sm-8">
                    <label class="form-control">@trainee?.BirthDate.ToShortDateString()</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Is Graduated:</label>
                <div class="col-sm-8">
                    <label class="form-control">@((trainee?.IsGraduated ?? false) ? "Yes" : "No")</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Track:</label>
                <div class="col-sm-8">
                    <label class="form-control">@track?.Name</label>
                </div>
            </div>
        </div>
    </div>
</div>