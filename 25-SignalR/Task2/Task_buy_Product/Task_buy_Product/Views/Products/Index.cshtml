@model IEnumerable<Task_buy_Product.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="tbody">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


@section Scripts{
    <script src="~/lib/microsoft-signalr/signalr.js"></script>

    <script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>

    <script>
        //1
        var connection = new signalR.HubConnectionBuilder().withUrl("/ProductHub").build();
        //2
        connection.start().then(function () {
            console.log("Connection Sucsees");
        });

        //4
        connection.on("UpdateProducts", function (product) {
            console.log(product);

            var tbody = document.getElementById("tbody");
            var row = document.createElement('tr');

            var nameCell = document.createElement('td');
            var imageCell = document.createElement('td');
            var quantityCell = document.createElement('td');
            var priceCell = document.createElement('td');
            var actionsCell = document.createElement('td');

            nameCell.innerHTML = product.name;
            imageCell.innerHTML = product.image;

            quantityCell.innerHTML = product.quantity;
            priceCell.innerHTML = product.price;

            var editLink = document.createElement('a');
            editLink.setAttribute('href', `https://localhost:7278/Products/Edit/${product.id}`);
            editLink.innerHTML = 'Edit';
            actionsCell.appendChild(editLink);

            actionsCell.append(" | ");

            var detailsLink = document.createElement('a');
            detailsLink.setAttribute('href', `https://localhost:7278/Products/Details/${product.id}`);
            detailsLink.innerHTML = 'Details';
            actionsCell.appendChild(detailsLink);

            actionsCell.append(" | ");

            var deleteLink = document.createElement('a');
            deleteLink.setAttribute('href', `https://localhost:7278/Products/Delete/${product.id}`);
            deleteLink.innerHTML = 'Delete';
            actionsCell.appendChild(deleteLink);



            row.appendChild(nameCell);
            row.appendChild(imageCell);
            row.appendChild(quantityCell);
            row.appendChild(priceCell);
            row.appendChild(actionsCell);


            tbody.appendChild(row);
        });


    </script>
}
